{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "declaration": true,
    "declarationMap": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "swc": false,
    "transpileOnly": false
  }
} 